<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.third.autoloan.opinionmag.mapper.OpinionMapper">

	<select id="getOpinionByOrderId" parameterType="long" resultMap="opinionMap">
		SELECT * FROM t_order o LEFT JOIN t_opinion op ON o.fk_opinion_id=op.id WHERE o.id=#{id}
	</select>

	<resultMap id="opinionMap" type="com.third.autoloan.beans.OpinionBean">
		<id property="id" column="id"></id>
		<result property="loanTime" column="loanTime"></result>
		<result property="conclusion" column="conclusion"></result>
		<result property="loanAmount" column="loanAmount"></result>
		<result property="branchOpinion" column="branchOpinion"></result>
		<result property="HQOpinion" column="HQOpinion"></result>
	</resultMap>
</mapper>